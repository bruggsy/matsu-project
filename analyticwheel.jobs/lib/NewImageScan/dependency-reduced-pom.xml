<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.opendatagroup.hyperspectral</groupId>
  <artifactId>newimage</artifactId>
  <name>newimage</name>
  <version>0.1-SNAPSHOT</version>
  <url>http://www.opendatagroup.com</url>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <build>
    <resources>
      <resource>
        <targetPath>resources/data</targetPath>
        <directory>src/main/data</directory>
      </resource>
      <resource>
        <targetPath>resources/python</targetPath>
        <directory>src/main/python</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifestFile>src/main/resources/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <filters>
            <filter>
              <artifact>*:gt-coverage</artifact>
              <excludes>
                <exclude>META-INF/registryFile.jai</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>*:gt-epsg-extension</artifact>
              <excludes>
                <exclude>META-INF/services/org.opengis.referencing.crs.CRSAuthorityFactory</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>*:gt-epsg-wkt</artifact>
              <excludes>
                <exclude>META-INF/services/org.opengis.referencing.crs.CRSAuthorityFactory</exclude>
              </excludes>
            </filter>
            <filter>
              <artifact>*:gt-referencing</artifact>
              <excludes>
                <exclude>META-INF/services/org.opengis.referencing.crs.CRSAuthorityFactory</exclude>
                <exclude>META-INF/services/org.opengis.referencing.operation.CoordinateOperationAuthorityFactory</exclude>
                <exclude>META-INF/services/org.opengis.referencing.datum.DatumAuthorityFactory</exclude>
                <exclude>META-INF/services/org.opengis.referencing.cs.CSAuthorityFactory</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>target/lib</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>geotools-repo</id>
      <url>file://${basedir}/geotools-repo</url>
    </repository>
    <repository>
      <id>clojars.org</id>
      <url>http://clojars.org/repo</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>storm</groupId>
      <artifactId>storm</artifactId>
      <version>0.8.2</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>clojure</artifactId>
          <groupId>org.clojure</groupId>
        </exclusion>
        <exclusion>
          <artifactId>commons-exec</artifactId>
          <groupId>org.apache.commons</groupId>
        </exclusion>
        <exclusion>
          <artifactId>libthrift7</artifactId>
          <groupId>storm</groupId>
        </exclusion>
        <exclusion>
          <artifactId>clj-time</artifactId>
          <groupId>clj-time</groupId>
        </exclusion>
        <exclusion>
          <artifactId>curator-framework</artifactId>
          <groupId>com.netflix.curator</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jzmq</artifactId>
          <groupId>backtype</groupId>
        </exclusion>
        <exclusion>
          <artifactId>json-simple</artifactId>
          <groupId>com.googlecode.json-simple</groupId>
        </exclusion>
        <exclusion>
          <artifactId>compojure</artifactId>
          <groupId>compojure</groupId>
        </exclusion>
        <exclusion>
          <artifactId>hiccup</artifactId>
          <groupId>hiccup</groupId>
        </exclusion>
        <exclusion>
          <artifactId>ring-jetty-adapter</artifactId>
          <groupId>ring</groupId>
        </exclusion>
        <exclusion>
          <artifactId>tools.logging</artifactId>
          <groupId>org.clojure</groupId>
        </exclusion>
        <exclusion>
          <artifactId>math.numeric-tower</artifactId>
          <groupId>org.clojure</groupId>
        </exclusion>
        <exclusion>
          <artifactId>carbonite</artifactId>
          <groupId>storm</groupId>
        </exclusion>
        <exclusion>
          <artifactId>snakeyaml</artifactId>
          <groupId>org.yaml</groupId>
        </exclusion>
        <exclusion>
          <artifactId>tools.cli</artifactId>
          <groupId>storm</groupId>
        </exclusion>
        <exclusion>
          <artifactId>disruptor</artifactId>
          <groupId>com.googlecode.disruptor</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jgrapht</artifactId>
          <groupId>storm</groupId>
        </exclusion>
        <exclusion>
          <artifactId>guava</artifactId>
          <groupId>com.google.guava</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

